{{>header}}
{{!-- Insert sub header for add project --}}
<div class="container">
    <div class="row">
        <div class="col-sm-1 col-md-2 col-lg-3"></div>
        {{!-- Default view needs a button to add a project, to list all projects and have buttons to edit or delete each project --}}
        <div class="col-sm-10 col-md-8 col-lg-6">
            <h4>Edit Project Listing</h4>
            <br>
            <form id="editProjectForm" data-id='{{ this.id }}'>
                <div class="form-group">
                    <label for="title">Project Title: {{ this.title }}</label>
                    <input value='{{ this.title }}' type="text" class="form-control" id="title" name='title'>
                </div>
                <div class="form-group">
                    <label for="photo_url">Photo URL:</label>
                    <input value='{{ this.photo_url }}' type="url" class="form-control" id="photo_url" name="photo_url">
                </div>
                <div class="form-group">
                    <label for="deployed_url">Deployed URL:</label>
                    <input value='{{ this.deployed_url }}' type="url" class="form-control" id="deployed_url"
                        name="deployed_url">
                </div>
                <div class="form-group">
                    <label for="github_url">GitHub URL:</label>
                    <input value='{{ this.github_url }}' type="url" class="form-control" id="github_url"
                        name="github_url">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" name='description'
                        rows="5">{{ this.description }}</textarea>
                </div>
                <div class="form-group">
                    <label for="tech">Technologies:</label>
                    <textarea class="form-control" id="tech" name='tech' rows="2">{{ this.tech }}</textarea>
                </div>
                <button id='editProject' data-id="{{ this.id }}" type="button"
                    class="btn btn-secondary btn-lg btn-block">Edit
                    Project</button>
            </form>
        </div>
        <div class="col-sm-1 col-md-2 col-lg-3"></div>
    </div>
</div>
<br>